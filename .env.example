# ============================================
# ENVIRONNEMENT
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# SÉCURITÉ & AUTHENTIFICATION
# ============================================
# Secret pour JWT (minimum 32 caractères)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRATION=24h

# Secret pour encryption des paiements (minimum 32 caractères)
PAYMENT_SECRET=your_very_long_and_secure_payment_secret_min_32_chars

# Adresses IP bloquées (séparées par des virgules)
BLOCKED_IPS=

# ============================================
# BASE DE DONNÉES
# ============================================
# SQLite (par défaut)
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite

# PostgreSQL (pour production)
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mysoulmate
# DB_USER=postgres
# DB_PASSWORD=your_postgres_password
# DB_SSL=false

# ============================================
# IA & OPENAI
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
FALLBACK_AI_URL=

# ============================================
# PAIEMENTS STRIPE
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# EMAIL
# ============================================
# Service d'email (sendgrid, ses, smtp)
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@mysoulmate.app
EMAIL_FROM_NAME=MySoulmate

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password

# ============================================
# NOTIFICATIONS PUSH
# ============================================
EXPO_PUSH_TOKEN=your_expo_push_token_here

# ============================================
# STOCKAGE FICHIERS (AWS S3)
# ============================================
# AWS_S3_BUCKET=mysoulmate-uploads
# AWS_S3_REGION=us-east-1
# AWS_S3_ACCESS_KEY=your_s3_access_key
# AWS_S3_SECRET_KEY=your_s3_secret_key

# ============================================
# REDIS (pour cache et queues)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry pour error tracking
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# App version pour tracking
APP_VERSION=2.1.0

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS
# ============================================
# Origines autorisées (séparées par des virgules)
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# ============================================
# FRONTEND (React Native / Expo)
# ============================================
API_URL=http://localhost:3000/api
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# ============================================
# WEBSOCKET (pour chat temps réel)
# ============================================
# WEBSOCKET_PORT=3001

# ============================================
# 2FA & SÉCURITÉ
# ============================================
TWO_FACTOR_ISSUER=MySoulmate
TWO_FACTOR_APP_NAME=MySoulmate

# Clé d'encryption (32 bytes minimum pour AES-256)
ENCRYPTION_KEY=your_32_byte_encryption_key_here_exactly_32_chars_required

# ============================================
# ANALYTICS
# ============================================
# Mixpanel
MIXPANEL_TOKEN=

# Google Analytics 4
GA_MEASUREMENT_ID=
GA_API_SECRET=

# ============================================
# INTERNATIONALIZATION (i18n)
# ============================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,fr,es,de,it,pt,ja,zh

# ============================================
# API DOCUMENTATION
# ============================================
API_BASE_URL=http://localhost:3000
API_STAGING_URL=https://staging-api.mysoulmate.app
API_PRODUCTION_URL=https://api.mysoulmate.app
SUPPORT_EMAIL=support@mysoulmate.app

# ============================================
# ALERTING
# ============================================
# Slack webhook pour alertes
SLACK_WEBHOOK_URL=
