# MySoulmate Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_very_secure_random_jwt_secret_change_this_in_production
JWT_EXPIRATION=24h

# Session Configuration
SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds

# IP Filtering (comma-separated IPs to block)
BLOCKED_IPS=

# =============================================================================
# DATABASE
# =============================================================================

# SQLite (default for development)
DB_TYPE=sqlite
DB_PATH=./database.sqlite

# PostgreSQL (recommended for production)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mysoulmate
# DB_USER=mysoulmate_user
# DB_PASSWORD=your_secure_database_password

# =============================================================================
# REDIS (Optional - for caching and rate limiting)
# =============================================================================

REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_ORG_ID=

# AI Model Configuration
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7
AI_STREAMING_ENABLED=true

# Fallback AI Service URL (optional)
FALLBACK_AI_URL=

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# AI Features
FEATURE_AI_STREAMING=true
FEATURE_AI_GPT4=false
FEATURE_AI_IMAGE_GENERATION=true

# Premium Features
FEATURE_PREMIUM_AR_VIEW=true
FEATURE_PREMIUM_VIDEO_CALLS=true

# Security Features
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_BIOMETRIC_AUTH=true

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# =============================================================================
# CONTENT MODERATION
# =============================================================================

MODERATION_ENABLED=true
MODERATION_STRICT_MODE=false

# =============================================================================
# GDPR & COMPLIANCE
# =============================================================================

GDPR_ENABLED=true
DATA_RETENTION_DAYS=730  # 2 years
DELETION_GRACE_PERIOD_DAYS=30
DPO_EMAIL=dpo@mysoulmate.app

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the .env file to version control
# 2. Use strong, unique values for all secrets and keys
# 3. Rotate secrets regularly in production
